generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String
  username    String?   @unique
  email       String?
  phoneNumber String
  Profile     Profile?
  contacts    Contact[] @relation(name: "Contact")
}

model Profile {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [userId], references: [id])
  userId  Int    @unique
  bio     String
  image1  String
  image2  String
  image3  String
  image4  String
  image5  String
  image6  String
  prompt1 String
  prompt2 String
  prompt3 String
}

model Contact {
  id        Int      @id @default(autoincrement())
  users     User[]   @relation(name: "Contact")
  isMatch   Boolean  @default(false)
  createdAt DateTime
}

